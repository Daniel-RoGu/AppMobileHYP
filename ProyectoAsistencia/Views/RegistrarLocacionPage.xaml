<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoAsistencia.Views.RegistrarLocacionPage"
             BackgroundColor="#E6F2F5"
             Title="Registrar Locación Nueva">

    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" Padding="5" Spacing="10">

            <!-- Encabezado -->
            <Frame BackgroundColor="#0A4F6E" CornerRadius="5" Padding="10" HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Image Source="home_icon.png" HeightRequest="30" WidthRequest="30" />
                    <Label Text="Registro de Locación"
                           HorizontalOptions="CenterAndExpand"
                           VerticalTextAlignment="Center"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White" />
                </StackLayout>
            </Frame>

            <!-- Contenido Principal -->
            <StackLayout Spacing="10" Padding="5">

                <!-- Nombre Locación -->
                <Frame CornerRadius="5" Padding="8" BackgroundColor="White">
                    <StackLayout Spacing="2">
                        <Label Text="Nombre Locación" 
                               FontSize="14" 
                               TextColor="#0A4F6E" />
                        <Entry Placeholder="Ingrese el nombre de la locación" 
                               BackgroundColor="#F5F5F5" 
                               TextColor="Black" 
                               FontSize="14"
                               x:Name="NombreLocacion" />
                    </StackLayout>
                </Frame>

                <!-- RIG -->
                <Frame CornerRadius="5" Padding="8" BackgroundColor="White">
                    <StackLayout Spacing="2">
                        <Label Text="RIG" 
                               FontSize="14" 
                               TextColor="#0A4F6E" />
                        <Entry Placeholder="Ingrese el RIG" 
                               BackgroundColor="#F5F5F5" 
                               TextColor="Black" 
                               FontSize="14"
                               x:Name="RIG" />
                    </StackLayout>
                </Frame>

                <!-- Pozo -->
                <Frame CornerRadius="5" Padding="8" BackgroundColor="White">
                    <StackLayout Spacing="2">
                        <Label Text="Pozo" 
                               FontSize="14" 
                               TextColor="#0A4F6E" />
                        <Entry Placeholder="Ingrese el nombre del pozo" 
                               BackgroundColor="#F5F5F5" 
                               TextColor="Black" 
                               FontSize="14"
                               x:Name="NombrePozo" />
                    </StackLayout>
                </Frame>

                <!-- Botón Guardar -->
                <Button Text="Guardar" 
                        BackgroundColor="#1E88E5" 
                        TextColor="White" 
                        FontSize="14" 
                        CornerRadius="15" 
                        HeightRequest="45" 
                        HorizontalOptions="FillAndExpand"
                        Clicked="ButtonGuardar_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
