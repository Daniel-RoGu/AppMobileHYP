                                           FontSize="Body"
                                           TextColor="#757575" />
                                    <Picker x:Name="tipoEmpresaPicker"
                                            FontFamily="Roboto"
                                            FontSize="Body"
                                            Title="Selecciona una empresa"
                                            HorizontalOptions="FillAndExpand" />
                                </StackLayout>

                                <!-- Locación asociada -->
                                <StackLayout Grid.Column="1">
                                    <Label Text="Locacion asociada"
                                           FontFamily="ManropeSemibold"
                                           FontSize="Body"
                                           TextColor="#757575" />
                                    <Picker x:Name="tipoLocacionPicker"
                                            FontFamily="Roboto"
                                            FontSize="Body"
                                            Title="Selecciona una locacion"
                                            HorizontalOptions="FillAndExpand" />
                                </StackLayout>

                                <!-- Tipo de usuario -->
                                <StackLayout Grid.Column="2">
                                    <Label Text="Tipo usuario"
                                           FontFamily="ManropeSemibold"
                                           FontSize="Body"
                                           TextColor="#757575" />
                                    <Picker x:Name="tipoUsuarioPicker"
                                            FontFamily="Roboto"
                                            FontSize="Body"
                                            Title="Selecciona el tipo de usuario"
                                            SelectedIndexChanged="OnTipoUsuarioPickerChanged"
                                            HorizontalOptions="FillAndExpand" />
                                </StackLayout>
                            </Grid>

                            <Grid ColumnSpacing="20" HorizontalOptions="FillAndExpand">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" /> <!-- Columna 1: Ocupa una parte igual del espacio -->
                                    <ColumnDefinition Width="*" /> <!-- Columna 2: Ocupa una parte igual del espacio -->
                                </Grid.ColumnDefinitions>

                                <!-- Correo -->
                                <StackLayout Grid.Column="0">
                                    <Label Text="Correo"
                                           FontFamily="ManropeSemibold"
                                           FontSize="Body"
                                           TextColor="#757575" />
                                    <Entry x:Name="correoEntry"
                                           Placeholder="Ingresa tu correo electrónico"
                                           FontFamily="Roboto"
                                           FontSize="Body"
                                           TextColor="#333"
                                           HorizontalOptions="FillAndExpand" />
                                </StackLayout>

                                <!-- Celular -->
                                <StackLayout Grid.Column="1">
                                    <Label Text="Celular"
                                           FontFamily="ManropeSemibold"
                                           FontSize="Body"
                                           TextColor="#757575" />
                                    <Entry x:Name="CelularEntry"
                                           Placeholder="Ingresa tu número de celular"
                                           FontFamily="Roboto"
                                           FontSize="Body"
                                           TextColor="#333"
                                           HorizontalOptions="FillAndExpand" />
                                </StackLayout>
                            </Grid>
                        </StackLayout>
                        
                        <FlexLayout>
                            <Button Text="Guardar"
