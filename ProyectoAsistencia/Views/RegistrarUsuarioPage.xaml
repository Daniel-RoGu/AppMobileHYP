                                    <ColumnDefinition Width="*" /> <!-- Columna 3: Ocupa una parte igual del espacio -->
                                </Grid.ColumnDefinitions>

                                <!-- Empresa asociada -->
                                <StackLayout Grid.Column="0">
                                    <Label Text="Empresa asociada"
